---
import DarkVeil from "./DarkVeil";
import Prism from "./Prism.tsx";
---

<div
  class="absolute inset-0 z-0"
  style="width: 100vw; height: 90vh; left: 50%; transform: translateX(-50%);"
>
  <Prism
    animationType="rotate"
    timeScale={0.3}
    scale={3}
    height={2}
    baseWidth={3}
    hueShift={1.06}
    colorFrequency={1}
    noise={0}
    glow={0.8}
    client:only="react"
  />
  <!-- <DarkVeil /> -->
</div>
